<div class='page-header'>
  <%= link_to new_giftee_path, :class => 'btn btn-primary' do %>
    <span class='glyphicon glyphicon-plus'></span>
    New Giftee
  <% end %>
  <h1>Listing giftees</h1>
</div>

<div class='table-responsive'>
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @giftees) do |giftee| %>
            <td><%= giftee.first_name %></td>
            <td> <%=giftee.last_name %></td>
            <td><%= link_to 'Show', giftee %></td>
        <td><%= link_to 'Edit', edit_giftee_path(giftee) %></td>
        <td><%= link_to 'Destroy', giftee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
